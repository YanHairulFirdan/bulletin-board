AppConfig -> class

private database type
private database name
private host
private username
private table

setConfig -> method
  check if config file is not empty
    database type = get_config(database type)
    database name = get_config(database name)
    host          = get_config(host)
    username      = get_config(username)
    table         = get_config(table)
  else
    setDefaultConfig
  

setDefaultConfig -> method
  database type = get_config(database type)
  database name = get_config(database name)
  host          = get_config(host)
  username      = get_config(username)
  table         = get_config(table)

